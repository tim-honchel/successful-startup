@*Identity requires this file to be included with this exact name, although it is a duplicate of the LoginDisplay component*@

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@using Microsoft.AspNetCore.Identity;
@using SuccessfulStartup.Presentation.Authentication

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>